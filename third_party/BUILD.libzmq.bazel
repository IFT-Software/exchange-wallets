load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make", "cmake")

filegroup(
    name = "all_srcs",
    srcs = glob(
        include = ["**"],
        exclude = ["*.bazel"],
    ),
)

LIB_NAME = "libzmq"

cmake(
    name = "libzmq",
    lib_name = LIB_NAME,
    lib_source = ":all_srcs",
    out_shared_libs = [
        "libzmq.so",
    ],
    visibility = ["//visibility:public"],
)